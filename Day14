from getpass import getpass as input
print("=== This is a Rock, Paper, Scissors game === ")
print()
print("Kindly use R,P,S to represent Rock, Paper, Scissors")
player1 = input("Player 1 > ")
print()
player2 = input("Player 2 > ")
if player1 == "R" and player2 == "P":
  print("player 1's rock is smothered by player 2's paper!")
  if player1 == "P" and player2 == "R":
   print("player 2's rock is smothered by player 1's paper!")
  elif player1 == "P" and player2 == "S":
   print("Player 2 used a sharp scissors to cut player 1's paper smoothly!")
elif player1 == "S" and player2 == "P":
   print("Player 2 used a sharp scissors to cut player 1's paper smoothly!")
elif player1 == "S" and player2 == "R":
  print("Player 2 used his rock to obliterate player 1's scissors!")
elif player1 == "R" and player2 == "S":
    print("Player 1 used his rock to obliterate player 2's scissors!")
elif player1 == "P" and player2 == "P":
 print("that's a draw! play again")
elif player1 == "R" and player2 == "R":
 print("that's a draw! play again")
elif player1 == "S" and player2 == "S":
 print("that's a draw! play again")
else:
  print("Invalid move")
