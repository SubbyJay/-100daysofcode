def customise_word(colour, word):
  if colour=="green":
   print("\033[32m", word, sep="", end="") 
  elif colour=="red":
   print("\033[31m", word, sep="", end="") 
  elif colour=="blue":
   print("\033[34m", word, sep="", end="" ) 
  else:
   print("\033[0m", word, sep="", end="") 

print("Super Subroutine")
print("With my ", end="")
customise_word("red", "new program")
customise_word("reset", " I can just call red('and') ")
customise_word("red", "it will print in red 
